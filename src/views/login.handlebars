<body class="bg-light" style="margin: 0; padding: 0;">
  <div class="d-flex justify-content-center align-items-center" style="height: 100vh; padding-top: 60px;">
    <div class="card p-4 shadow" style="width: 350px;">
      <h1 class="mb-4 text-center">Iniciar sesi√≥n</h1>

      {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{errorMessage}}
        </div>
      {{/if}}

      <form id="loginForm">
        <div class="mb-3">
          <label for="email" class="form-label">Correo electr√≥nico:</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Contrase√±a:</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
      </form>

      <div class="mt-3 text-center">
        <button
          type="button"
          class="btn btn-link"
          data-bs-toggle="modal"
          data-bs-target="#forgotPasswordModal"
        >
          ¬øOlvidaste tu contrase√±a?
        </button>
      </div>

      <p class="mt-3 text-center">
        ¬øNo tienes cuenta?
        <a href="/register">Registrarse</a>
      </p>
    </div>
  </div>

  <!-- Modal -->
  <div
    class="modal fade"
    id="forgotPasswordModal"
    tabindex="-1"
    aria-labelledby="forgotPasswordModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="forgotPasswordForm">
          <div class="modal-header">
            <h5 class="modal-title" id="forgotPasswordModalLabel">
              Recuperar contrase√±a
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            ></button>
          </div>
          <div class="modal-body">
            <div id="alertPlaceholder"></div>
            <div class="mb-3">
              <label for="forgotEmail" class="form-label">Correo electr√≥nico</label>
              <input
                type="email"
                class="form-control"
                id="forgotEmail"
                name="email"
                required
              />
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
            <button type="submit" class="btn btn-primary">Enviar correo</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle (incluye Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const loginForm = document.getElementById("loginForm");

    loginForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(loginForm);
      const data = Object.fromEntries(formData.entries());

      try {
        const res = await fetch("/api/sessions/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          credentials: "include", // Importante para enviar la cookie
          body: JSON.stringify(data),
        });

        const result = await res.json();

        if (res.ok) {
          console.log("üü¢ Login exitoso:", result);
          await checkCurrentUser(); // Validar cookie despu√©s del login
          window.location.href = "/";
        } else {
          alert(result.message || "Login fallido");
        }
      } catch (error) {
        console.error("Error en login:", error);
        alert("Error al iniciar sesi√≥n");
      }
    });

    // Verificar usuario actual con la cookie
    async function checkCurrentUser() {
      try {
        const res = await fetch("/api/sessions/current", {
          method: "GET",
          credentials: "include", // <- para enviar la cookie jwt
        });

        const result = await res.json();

        if (res.ok) {
          console.log("‚úÖ Usuario autenticado:", result.user);
          alert("‚úÖ Usuario autenticado: " + result.user.email);
        } else {
          console.warn("‚ö†Ô∏è No autenticado:", result.message);
          alert("‚ö†Ô∏è No autenticado: " + result.message);
        }
      } catch (error) {
        console.error("Error al verificar usuario actual:", error);
        alert("Error al verificar usuario actual");
      }
    }

    // Forgot password submit
    const forgotPasswordForm = document.getElementById("forgotPasswordForm");
    const alertPlaceholder = document.getElementById("alertPlaceholder");
    const forgotPasswordModal = new bootstrap.Modal(document.getElementById('forgotPasswordModal'));

    forgotPasswordForm.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(forgotPasswordForm);
      const data = Object.fromEntries(formData.entries());

      alertPlaceholder.innerHTML = ""; // limpiar alertas previas

      try {
        const res = await fetch("/api/sessions/forgot-password", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        const result = await res.json();

        if (res.ok) {
          alertPlaceholder.innerHTML = `
            <div class="alert alert-success" role="alert">
              ${result.message || "Correo de recuperaci√≥n enviado correctamente."}
            </div>
          `;
          forgotPasswordForm.reset();
          setTimeout(() => forgotPasswordModal.hide(), 2000);
        } else {
          alertPlaceholder.innerHTML = `
            <div class="alert alert-danger" role="alert">
              ${result.message || "Error al enviar correo."}
            </div>
          `;
        }
      } catch (error) {
        alertPlaceholder.innerHTML = `
          <div class="alert alert-danger" role="alert">
            Error al enviar correo.
          </div>
        `;
        console.error("Error en recuperar contrase√±a:", error);
      }
    });
  </script>
</body>